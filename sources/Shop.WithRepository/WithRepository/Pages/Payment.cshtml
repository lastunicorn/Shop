@page
@model Shop.WithRepositories.Pages.PaymentModel
@{
    ViewData["Title"] = "Payment";
}
<h1>@ViewData["Title"]</h1>

<form method="post">

    @Html.HiddenFor(x => x.OrderId)

    You are about the pay for the following items:
    <ul>
        <li>@Model.ProductName</li>
    </ul>

    <div>
        Total price: @Model.Price
    </div>

    <input class="btn btn-primary" type="submit" value="Pay" asp-page-handler="Pay" />
    <input class="btn btn-primary" type="submit" value="Cancel" asp-page-handler="Cancel" />

</form>